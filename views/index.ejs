<%- include('partials/header.ejs'); -%> <%-
include('partials/site-navbar.ejs');-%>

<body>
  <div class="container">
    <div class="jumbotron">
      <h1 class="display-4">Bem-vindo!</h1>
      <p class="lead">Blog simples sobre assuntos gerais.</p>
      <hr class="my-4" />
      <p>Leia, cadastre artigos e se divirta!</p>
    </div>
    <hr />
    <% articles.forEach(article => { %>
    <div class="card">
      <div class="card-header">
        <h2><%= article.title %></h2>
      </div>
      <div class="card-body">
        <a href="/<%= article.slug %>" class="btn btn-primary">Ver artigo</a>
      </div>
    </div>
    <br />
    <% }) %>
  </div>
</body>

<%- include('partials/footer.ejs'); -%>
